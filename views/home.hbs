
<div class="row">
  <div class="col-6"><h1>etudiant</h1></div>
  <div class="col-6 d-flex justify-content-end">
    <a href="/addetudiant" type="button" class="btn btn-primary align-self-center">+Ajout etudiant</a>
  </div>
</div>

<table class="table table-border">
  <thead class="thead dark"> 
    <tr>
      <th scope="col">#</th>
      <th scope="col">Matricule</th>
      <th scope="col">Nom</th>
      <th scope="col">Prenom</th>
      <th scope="col">Telephone</th>
      <th scope="col">Email</th>
      <th scope="col" class="text-end">Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each rows}}
    <tr>
      <th scope="row">{{this.id_etu}}</th>
      <td>{{this.mat_etu}}</td>
      <td>{{this.nom_etu}}</td>
      <td>{{this.prenom_etu}}</td>
      <td>{{this.tel_etu}}</td>
      <td>{{this.gmail_etu}}</td>
      <td class="text-end">
        <a href="#" type="button" class="btn btn-light btn-small"><i class="bi bi-eye"></i>View</a>
        <a href="/editetudiant/{{this.id_etu}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i>Edit</a>
        <a href="/{{this.id_etu}}" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i>Delete</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>